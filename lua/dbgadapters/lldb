return {
	adapter = {
		type = "executable",
		command = "lldb-dap",
		name = "lldb",
	},
	configurations = {
		name = "Launch LLDB",
		type = "lldb",
		request = "launch",
		program = function()
			return vim.fn.input('Path to executable: ', vim.fn.getcwd() .. '/', 'file')
		end,
		stopOnEntry = false,
		cwd = "${workspaceFolder}",
		args = {}
	},
	filetypes = {"c", "cpp"}
}